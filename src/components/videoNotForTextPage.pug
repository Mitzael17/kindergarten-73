mixin videoNotForTextPage(preview, id)
    .video.video--static
        .video__preview
            img(src=preview, alt='video')
            .videoSign
        iframe(width="560" loading='lazy' height="300" src="https://www.youtube.com/embed/nZr1oqL0oZk" id=id title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen)

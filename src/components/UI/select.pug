    Items = [
        {id: f1, value: value}
    ]

mixin select(items, name, className)
    div.select-list(data-spoiler='true', class=className)
        .select-list__area
            span= items[0].value
            div.select-list__arrow
                svg
                    use(href='@img/icons/icons.svg#arrow-select')
        ul.select-list__items(data-spoiler-wrapper="true")
            each item, index in items
                li.select-list__item
                    label
                        input(type='radio', name=name checked= index === 0, data-display-on-change= item.value)
                        div.select__div= item.value

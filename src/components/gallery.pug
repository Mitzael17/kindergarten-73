mixin gallery(qty= 1, isSwiper= true, className= '', data= ['Длинное длинное длинное длинное длинное название галереи', 'Название галереи', 'Длинное длинное длинное длинное длинное название галереи', 'Название галереи', 'Название галереи'])
    - var index = 0;
    while (index++ < qty)
        each text in data
            a.galleryItem.cartSlide(class= (isSwiper ? 'swiper-slide ' : '') + className, href="gallery.html")
                .weakText 12 июля 2023
                .galleryItem__img.relative
                    img(src="@img/temporary/gallery-1.png", alt='gallery', loading='lazy').relative.priority
                    .swiper-lazy-preloader.animate
                .tags
                    | #солнышко  #день-рождения #2023
                    span +5
                .galleryItem__text= text